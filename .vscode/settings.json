{
    "files.autoSave": "onFocusChange",
    "workbench.colorTheme": "Solarized Light",
    "editor.wordWrap": "on",
    "editor.inlineSuggest.enabled": true,
    // Controls if quick suggestions should show up while typing
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    // Controls whether suggestions should be accepted on commit characters. For example, in JavaScript, the semi-colon (`;`) can be a commit character that accepts a suggestion and types that character.
    "editor.acceptSuggestionOnCommitCharacter": true,
    // Controls if suggestions should be accepted on 'Enter' - in addition to 'Tab'. Helps to avoid ambiguity between inserting new lines or accepting suggestions. The value 'smart' means only accept a suggestion with Enter when it makes a textual change
    "editor.acceptSuggestionOnEnter": "on",
    // Controls the delay in ms after which quick suggestions will show up.
    "editor.quickSuggestionsDelay": 2,
    // Controls if suggestions should automatically show up when typing trigger characters
    "editor.suggestOnTriggerCharacters": true,
    // Controls if pressing tab inserts the best suggestion and if tab cycles through other suggestions
    "editor.tabCompletion": "off",
    // Controls whether sorting favours words that appear close to the cursor
    "editor.suggest.localityBonus": true,
    // Controls how suggestions are pre-selected when showing the suggest list
    "editor.suggestSelection": "first",
    // Enable word based suggestions
    "editor.wordBasedSuggestions": true,
    // Enable parameter hints
    "editor.parameterHints.enabled": true,
    "remote.SSH.remotePlatform": {},
    "settingsSync.ignoredSettings": [
        "configurationSync.store",
        "-window.zoomLevel",
        "-remote.tunnels.access.preventSleep"
    ],
    "configurationSync.store": {},
    "remote.tunnels.alwaysUpdateCLI": true,
    "editor.formatOnType": true,
    "editor.fontSize": 18,
    "editor.fontFamily": "verdana",
    "terminal.integrated.fontFamily": "monospace",
    "git.enableSmartCommit": true,
    "diffEditor.renderSideBySide": false,
    "git.autofetch": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "gitlens.views.repositories.branches.layout": "list",
    "git.confirmSync": false,
    "editor.formatOnSave": true,
    "workbench.iconTheme": "material-icon-theme",
    "editor.bracketPairColorization.enabled": true,
    "prettier.bracketSameLine": true,
    "editor.mouseWheelZoom": true,
    "terminal.integrated.automationProfile.linux": null,
    "editor.stickyScroll.maxLineCount": 3,
    "codesnap.backgroundColor": "#d0f4de",
    "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 50px 60px",
    "codesnap.containerPadding": "1em",
    "codesnap.realLineNumbers": true,
    "codesnap.showWindowTitle": true,
    "editor.wordWrapColumn": 60,
    "editor.stickyScroll.enabled": true,
    "diffEditor.codeLens": true,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "debug.autoExpandLazyVariables": true,
    "remote.tunnels.access.preventSleep": true,
    "settingsSync.ignoredExtensions": [],
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "python.formatting.provider": "none",
}